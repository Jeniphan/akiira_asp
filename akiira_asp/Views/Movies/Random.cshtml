@model akiira_asp.ViewModels.RandomMovieViewModel;
@{
    ViewData["Title"] = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="popular">@Model.Movie.Name</h1>

@if(Model.Customers.Count == 0){
    <p> No one has rented this movie befor.</p>
}
else {
<ul>
    @foreach(var customer in Model.Customers){
        <li>@customer.Name</li>
    }
</ul>

}

